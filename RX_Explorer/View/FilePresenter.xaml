                                        </Button>
                                        <Button HorizontalAlignment="Stretch"
                                                VerticalAlignment="Stretch"
                                                x:Name="SizeFilterHeader"
                                                Visibility="Collapsed"
                                                Height="35"
                                                Width="25"
                                                Padding="2"
                                                Background="{ThemeResource ElementAcrylicBrush}"
                                                Style="{StaticResource ListHeaderButtonStyle}"
                                                RelativePanel.AlignRightWithPanel="True">
                                            <Viewbox Width="10">
                                                <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                          Glyph="&#xE96E;" />
                                            </Viewbox>
                                            <Button.Flyout>
                                                <Flyout Placement="BottomEdgeAlignedLeft"
                                                        x:Name="SizeFilterFlyout"
                                                        ShouldConstrainToRootBounds="False"
                                                        Opened="FilterFlyout_Opened"
                                                        Closing="FilterFlyout_Closing">
                                                    <Flyout.FlyoutPresenterStyle>
                                                        <Style TargetType="FlyoutPresenter">
                                                            <Setter Property="CornerRadius"
                                                                    Value="0" />
                                                            <Setter Property="Background"
                                                                    Value="{ThemeResource SystemControlChromeHighAcrylicElementMediumBrush}" />
                                                        </Style>
                                                    </Flyout.FlyoutPresenterStyle>
                                                    <StackPanel MinWidth="200">
                                                        <CheckBox IsChecked="{x:Bind Filter.SizeFilterCheckBox1,Mode=TwoWay}">
                                                            <StackPanel Orientation="Horizontal">
                                                                <Viewbox Height="16"
                                                                         VerticalAlignment="Bottom">
                                                                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                                              Glyph="&#xE81E;" />
                                                                </Viewbox>
                                                                <TextBlock Margin="10,0,0,0"
                                                                           Text="较小 (≤1MB)"
                                                                           x:Uid="SizeFilterCheckBox1Text" />
                                                            </StackPanel>
                                                        </CheckBox>
                                                        <CheckBox IsChecked="{x:Bind Filter.SizeFilterCheckBox2,Mode=TwoWay}">
                                                            <StackPanel Orientation="Horizontal">
                                                                <Viewbox Height="16"
                                                                         VerticalAlignment="Bottom">
                                                                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                                              Glyph="&#xE81E;" />
                                                                </Viewbox>
                                                                <TextBlock Margin="10,0,0,0"
                                                                           Text="中等 (1MB - 128MB)"
                                                                           x:Uid="SizeFilterCheckBox2Text" />
                                                            </StackPanel>
                                                        </CheckBox>
                                                        <CheckBox IsChecked="{x:Bind Filter.SizeFilterCheckBox3,Mode=TwoWay}">
                                                            <StackPanel Orientation="Horizontal">
                                                                <Viewbox Height="16"
                                                                         VerticalAlignment="Bottom">
                                                                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                                              Glyph="&#xE81E;" />
                                                                </Viewbox>
                                                                <TextBlock Margin="10,0,0,0"
                                                                           Text="较大 (128MB - 1GB)"
                                                                           x:Uid="SizeFilterCheckBox3Text" />
                                                            </StackPanel>
                                                        </CheckBox>
                                                        <CheckBox IsChecked="{x:Bind Filter.SizeFilterCheckBox4,Mode=TwoWay}">
                                                            <StackPanel Orientation="Horizontal">
                                                                <Viewbox Height="16"
                                                                         VerticalAlignment="Bottom">
                                                                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                                              Glyph="&#xE81E;" />
                                                                </Viewbox>
                                                                <TextBlock Margin="10,0,0,0"
                                                                           Text="超大 (≥1GB)"
                                                                           x:Uid="SizeFilterCheckBox4Text" />
                                                            </StackPanel>
                                                        </CheckBox>
                                                    </StackPanel>
                                                </Flyout>
                                            </Button.Flyout>
                                        </Button>
                                    </RelativePanel>
                                    <Button VerticalAlignment="Stretch"
                                            HorizontalAlignment="Stretch"
                                            Grid.Column="4"
                                            IsDoubleTapEnabled="True"
                                            DoubleTapped="ListHeader_DoubleTapped"
                                            Background="{ThemeResource ElementAcrylicBrush}"
                                            Style="{StaticResource ListHeaderButtonStyle}" />
                                </Grid>
                            </DataTemplate>
                        </ListView.HeaderTemplate>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsStackPanel AreStickyGroupHeadersEnabled="True" />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment"
                                        Value="Stretch" />
                                <Setter Property="VerticalContentAlignment"
                                        Value="Stretch" />
                                <Setter Property="Padding"
                                        Value="0" />
                                <Setter Property="UseSystemFocusVisuals"
                                        Value="False" />
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </SemanticZoom.ZoomedInView>
                <SemanticZoom.ZoomedOutView>
                    <ListView ItemsSource="{x:Bind ListCollectionVS.View.CollectionGroups,Mode=OneWay}"
                              SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="Data:ICollectionViewGroup">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{x:Bind Group.(Cls:FileSystemStorageGroupItem.Key)}"
                                               FontSize="18" />
                                    <TextBlock Margin="5,0,0,0"
                                               VerticalAlignment="Center"
                                               FontSize="14"
                                               Text="{x:Bind Group.(Cls:FileSystemStorageGroupItem.Description)}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </SemanticZoom.ZoomedOutView>
            </SemanticZoom>
            <SemanticZoom x:Load="False"
                          x:Name="GridViewSemantic">
                <SemanticZoom.ZoomedInView>
                    <GridView Name="GridViewControl"
                              Background="Transparent"
                              ContainerContentChanging="ViewControl_ContainerContentChanging"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              RightTapped="ViewControl_RightTapped"
                              Holding="ViewControl_Holding"
                              SelectionChanged="ViewControl_SelectionChanged"
                              SelectionMode="Extended"
                              ItemClick="ViewControl_ItemClick"
                              CanDrag="False"
                              CanReorderItems="False"
                              AllowDrop="True"
                              IsHoldingEnabled="True"
                              DragOver="ViewControl_DragOver"
                              Drop="ViewControl_Drop"
                              IsItemClickEnabled="True"
                              IsDoubleTapEnabled="True"
                              PreviewKeyDown="ViewControl_PreviewKeyDown"
                              DoubleTapped="ViewControl_DoubleTapped"
                              ShowsScrollingPlaceholders="False"
                              ItemsSource="{x:Bind GridCollectionVS.View,Mode=OneWay}"
                              ItemContainerTransitions="{x:Bind Cls:AnimationController.Current.RepositionTransitions,Mode=OneWay}">
                        <GridView.ItemContainerStyle>
                            <Style TargetType="GridViewItem">
                                <Setter Property="UseSystemFocusVisuals"
                                        Value="False" />
                                <Setter Property="VerticalContentAlignment"
                                        Value="Stretch" />
                            </Style>
                        </GridView.ItemContainerStyle>
                        <GridView.GroupStyle>
                            <GroupStyle HidesIfEmpty="True">
                                <GroupStyle.HeaderTemplate>
                                    <DataTemplate x:DataType="Cls:FileSystemStorageGroupItem">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{x:Bind Key}"
                                                       FontSize="18" />
                                            <TextBlock Margin="5,0,0,0"
                                                       VerticalAlignment="Center"
                                                       Text="{x:Bind Description}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </GroupStyle.HeaderTemplate>
                            </GroupStyle>
                        </GridView.GroupStyle>
                    </GridView>
                </SemanticZoom.ZoomedInView>
                <SemanticZoom.ZoomedOutView>
                    <ListView ItemsSource="{x:Bind GridCollectionVS.View.CollectionGroups,Mode=OneWay}"
                              SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="Data:ICollectionViewGroup">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{x:Bind Group.(Cls:FileSystemStorageGroupItem.Key)}"
                                               FontSize="18" />
                                    <TextBlock Margin="5,0,0,0"
                                               VerticalAlignment="Center"
                                               Text="{x:Bind Group.(Cls:FileSystemStorageGroupItem.Description)}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </SemanticZoom.ZoomedOutView>
            </SemanticZoom>
            <TextBlock Name="HasFile"
                       x:FieldModifier="public"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       x:Uid="HasFile"
                       Text="无文件"
                       FontSize="18"
                       Visibility="Collapsed" />
            <Canvas>
                <Rectangle Fill="{ThemeResource SystemAccentColorDark2}"
                           Stroke="{ThemeResource SystemAccentColorLight2}"
                           x:Name="DrawRectangle"
                           Opacity="0.4" />
            </Canvas>
            <StackPanel Grid.Row="1"
                        VerticalAlignment="Bottom">
                <TextBlock x:Name="StatusTips"
                           x:FieldModifier="public"
                           Padding="5,0,0,0"
                           TextTrimming="CharacterEllipsis"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Center"
                           IsDoubleTapEnabled="True"
                           DoubleTapped="StatusTips_DoubleTapped" />
                <Border Height="3"
                        Margin="0,2,0,0"
                        HorizontalAlignment="Stretch"
                        x:FieldModifier="public"
                        x:Name="FocusIndicator" />
                <CommandBar IsOpen="False"
                            ClosedDisplayMode="Minimal"
                            DefaultLabelPosition="Right"
                            Name="BottomCommandBar"
                            Opening="BottomCommandBar_Opening"
                            Background="{ThemeResource ElementAcrylicBrush}" />
            </StackPanel>
        </Grid>
        <local:Home HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    x:Name="RootFolderControl"
                    x:FieldModifier="public"
                    Visibility="Collapsed" />
    </Grid>
</Page>
